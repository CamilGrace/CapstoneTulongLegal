<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matching_bg"
    tools:context=".MainActivity">

    <!-- ScrollView containing a single LinearLayout as its child -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- First FrameLayout -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageBackArrow"
                    android:layout_width="29dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/image_arrow_back" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:orientation="horizontal"
                    android:layout_marginTop="80dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_screenshot_removebg_preview"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_matching" />

                    <TextView
                        android:id="@+id/text_tulong_legal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:lineHeight="39.01dp"
                        android:text="Lawyer Matching"
                        android:textColor="#FFFBFBFB"
                        android:textSize="30sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Second FrameLayout -->
            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background">

                <TextView
                    android:id="@+id/legal_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Legal Category"
                    android:textColor="#FF01212E"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginLeft="26dp"/>

                <Spinner
                    android:id="@+id/spinnerLegalCategory"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"
                    android:contentDescription="Select a category"
                    android:padding="8dp" />
            </FrameLayout>

            <!-- Third FrameLayout -->
            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_background">

                <!-- Label for Additional Details -->
                <TextView
                    android:id="@+id/AdditionalDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Additional Details"
                    android:textColor="#FF01212E"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="26dp" />

                <!-- EditText Positioned Under the Label -->
                <EditText
                    android:id="@+id/editTextAdditionalDetails"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="50dp"
                    android:hint="Describe your case details here..."
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:gravity="top|start" />

                <!-- Preferred Lawyer Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Lawyer"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="26dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18dp" />

                <!-- Gender Label -->
                <TextView
                    android:id="@+id/ViewGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="26dp"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <!-- Gender RadioGroup -->
                <RadioGroup
                    android:id="@+id/GroupGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="195dp"
                    android:layout_marginStart="26dp">

                    <RadioButton
                        android:id="@+id/Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/Any"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any" />
                </RadioGroup>

                <!-- Years of Expertise Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Years of Expertise:"
                    android:layout_marginTop="240dp"
                    android:layout_marginStart="26dp"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/GroupYearsOfExpertise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="260dp"
                    android:layout_marginStart="26dp">

                    <RadioButton
                        android:id="@+id/LessThan5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Less than 5 years" />

                    <RadioButton
                        android:id="@+id/Years5To10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5-10 years" />

                    <RadioButton
                        android:id="@+id/Years10To15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-15 years" />

                    <RadioButton
                        android:id="@+id/Years15AndAbove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 years and above" />

                    <RadioButton
                        android:id="@+id/AnyYears"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any" />
                </RadioGroup>

                <!-- Consultation Fee Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultation Fee:"
                    android:layout_marginTop="500dp"
                    android:layout_marginStart="26dp"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/GroupConsultationFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="520dp"
                    android:layout_marginStart="26dp">

                    <RadioButton
                        android:id="@+id/Free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free" />

                    <RadioButton
                        android:id="@+id/Fee100To500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100-500" />

                    <RadioButton
                        android:id="@+id/Fee500To1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500-1000" />

                    <RadioButton
                        android:id="@+id/Fee1000Plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000+" />

                    <RadioButton
                        android:id="@+id/AnyFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any amount" />
                </RadioGroup>

                <!-- Availability Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availability:"
                    android:layout_marginTop="760dp"
                    android:layout_marginStart="26dp"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/GroupAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="780dp"
                    android:layout_marginStart="26dp">

                    <RadioButton
                        android:id="@+id/AvailableNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available now" />

                    <RadioButton
                        android:id="@+id/Within24Hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available within 24 hours" />

                    <RadioButton
                        android:id="@+id/AnyTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anytime" />
                </RadioGroup>

            </FrameLayout>

            <Button
                android:id="@+id/btnFindMyLawyer"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:backgroundTint="#018E61"
                android:padding="16dp"
                android:text="Find My Lawyer"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar fixed at the bottom -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:itemIconSize="40dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
